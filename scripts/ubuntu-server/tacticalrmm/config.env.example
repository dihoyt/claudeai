################################################################################
# TacticalRMM Installation Configuration
# For Ubuntu 24.04 LTS
#
# This file contains all configurable variables for the TacticalRMM installation
# IMPORTANT: Passwords will be auto-generated during installation if not set
################################################################################

# Domain Configuration
DNS_SUFFIX="hoyt.local"
DOMAIN="tacticalrmm.${DNS_SUFFIX}"
API_DOMAIN="api.tacticalrmm.${DNS_SUFFIX}"
MESH_DOMAIN="mesh.tacticalrmm.${DNS_SUFFIX}"
RMM_DOMAIN="rmm.tacticalrmm.${DNS_SUFFIX}"

# Installation Paths
INSTALL_DIR="/rmm"
MESHCENTRAL_DIR="/meshcentral"
WEB_ROOT="/var/www/rmm"
LOG_DIR="/var/log/celery"

# Database Configuration
POSTGRES_DB="tacticalrmm"
POSTGRES_USER="tacticalrmm"
# POSTGRES_PASSWORD will be auto-generated if not set here

# Redis Configuration
# REDIS_PASSWORD will be auto-generated if not set here

# Admin Configuration
ADMIN_USERNAME="admin"
ADMIN_EMAIL="admin@tacticalrmm.${DNS_SUFFIX}"
# ADMIN_PASSWORD will be auto-generated if not set here

# MeshCentral Configuration
MESH_USER="tactical"
# MESH_TOKEN will be auto-generated if not set here
MESH_PORT=4430
MESH_REDIR_PORT=800

# Gunicorn Configuration
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=300
GUNICORN_PORT=8000

# SSL Certificate Paths
SSL_CERT_PATH="/etc/nginx/ssl/wildcard.crt"
SSL_KEY_PATH="/etc/nginx/ssl/wildcard.key"

# System Configuration
INSTALL_QEMU_AGENT="true"  # Set to false if not running in Proxmox

# Logging
LOG_FILE="/var/log/tacticalrmm-install.log"
SERVICE_LOG_DIR="/var/log/tacticalrmm"

# Python Configuration
PYTHON_VERSION="3.12"

# Node.js Configuration
NODEJS_VERSION="20"
